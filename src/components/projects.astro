---
import { Image } from "astro:assets";
// Cambia esto para que apunte a tu nueva captura
import bootcampProjectImg from "../../public/car_analyst.png";

interface Project {
  title: string;
  description: string;
  tags: string[];
  image: ImageMetadata;
  link: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "Car Market Interactive EDA", 
    description: "Aplicación interactiva desarrollada en Streamlit para el análisis del mercado de vehículos usados en EE.UU. Implementé filtros dinámicos y visualizaciones con Plotly para identificar la correlación entre kilometraje, condición y precio de venta.",
    tags: ["Python", "Streamlit", "Pandas", "Plotly", "Data Analysis"],
    image: bootcampProjectImg as ImageMetadata, // Usa una captura de la app funcionando
    link: "https://github.com/JToro1998/PROYECTO-SPRINT-7", // Pon el link de tu repo de vehículos
    status: "Deployed App",
  }
];
---

<section id="projects" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">Portfolio</h2>
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-8 gap-4">
        <h3 class="text-4xl md:text-5xl font-medium">Featured Work</h3>
        <p class="text-[var(--white-icon)] max-w-md text-sm md:text-base">
            Selección de proyectos donde aplico análisis estadístico y técnico para resolver problemas de negocio.
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-1 gap-12">
      {
        projects.map((project) => (
          <div class="group grid grid-cols-1 lg:grid-cols-2 gap-8 items-center bg-[#14141450] p-6 rounded-3xl border border-[#ffffff05] hover:border-[var(--white-icon-tr)] transition-all duration-500">
            
            <div class="rounded-2xl overflow-hidden shadow-2xl transition-all duration-500 bg-[#1d1d1d]">
              <Image
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 opacity-90 group-hover:opacity-100"
              />
            </div>
            
            <div class="flex flex-col justify-center">
              <div class="flex justify-between items-start mb-4">
                <h4 class="text-3xl font-bold group-hover:text-[var(--sec)] transition-colors tracking-tight">
                    {project.title}
                </h4>
              </div>
              
              <p class="text-[var(--white-icon)] text-md mb-6 leading-relaxed">
                {project.description}
              </p>

              <div class="flex flex-wrap gap-2 mb-8">
                {project.tags.map(tag => (
                  <span class="text-xs font-medium bg-[#1a1a1a] text-[var(--sec)] border border-[var(--sec)]/30 px-3 py-1 rounded-full shadow-[0_0_10px_rgba(164,118,255,0.1)]">
                    {tag}
                  </span>
                ))}
              </div>

              <div class="flex gap-4">
                <a
                  target="_blank"
                  href={project.link}
                  class="flex-1 flex justify-center items-center gap-2 text-sm font-bold text-white border border-[var(--white-icon-tr)] py-4 rounded-2xl bg-[#1d1d1d] hover:bg-[var(--sec)] hover:border-[var(--sec)] hover:shadow-[0_0_20px_rgba(164,118,255,0.4)] transition-all duration-300"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75 22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3-4.5 16.5" />
                  </svg>
                  View Case Study on GitHub
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-16 text-center">
        <a
          target="_blank"
          href="https://github.com/JToro1998?tab=repositories"
          class="inline-flex items-center gap-3 text-[var(--white-icon)] hover:text-white transition-all duration-300 group"
        >
          <span class="text-sm font-medium tracking-widest uppercase">Explore more repositories</span>
          <div class="h-[1px] w-12 bg-[var(--white-icon-tr)] group-hover:w-20 group-hover:bg-[var(--sec)] transition-all"></div>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5 group-hover:translate-x-1 transition-transform">
            <path d="M16.1716 10.9999L10.8076 5.63589L12.2218 4.22168L20 11.9999L12.2218 19.7781L10.8076 18.3639L16.1716 12.9999H4V10.9999H16.1716Z"></path>
          </svg>
        </a>
    </div>
  </div>
</section>
