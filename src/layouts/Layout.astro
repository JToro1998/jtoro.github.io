---
import '@fontsource-variable/montserrat';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Jose Luis Toro - Data Analyst Portfolio" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    
    <meta property="og:title" content="Jose Luis Toro | Data Analyst" />
    <meta property="og:description" content="Especialista en an치lisis de datos, visualizaci칩n y optimizaci칩n de procesos." />
    <meta property="og:image" content="/car-analysis.png" /> <meta property="og:url" content="https://jtoro1998.github.io" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Jose Luis Toro Portfolio" />

    <title>{title}</title>
  </head>
  <body class="bg-[--background] sm:px-28 lg:px-20 px-9">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --background: #0a0a0a; /* Un negro un poco m치s profundo para tu Mini LED */
    --sec: #a476ff;
    --white: #dfdfdf;
    --white-icon: #f3f3f398;
    --white-icon-tr: #f3f3f310;
  }

  /* ... resto de tus estilos se mantienen igual ... */
  * {
    font-family: "Montserrat Variable", -apple-system, system-ui, sans-serif;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  *::selection {
    background-color: var(--sec);
    color: var(--background);
  }

  ::-webkit-scrollbar { width: 8px; }
  ::-webkit-scrollbar-track { background: var(--background); }
  ::-webkit-scrollbar-thumb { 
    background: var(--white-icon-tr); 
    border-radius: 10px; 
  }
  ::-webkit-scrollbar-thumb:hover { background: var(--sec); }
</style>
